{
    "manifest_version": 3,
    "name": "Random Zoomer",
    "version": "1.0",
    "description": "Zooms in on the page at random intervals.",
    "permissions": ["scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Zoom Page",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    }
  }
  